        "animations",
        "react",
        "utility"
    ],
    "author": "Rajdip Bandopadhyay",
    "license": "MIT",
    "scripts": {
        "build": "babel src -d dist"
    },
    "devDependencies": {
        "@babel/core": "^7.12.10",
        "@babel/preset-env": "^7.26.0",
        "@babel/preset-react": "^7.26.3",
        "babel-loader": "^8.2.2"
    }
}
